[user]
    name = David Vuong
    email = david.vuong256@gmail.com

[color]
    ui = true

[alias]
    b = branch -v       # Verbose branch.

    # Commits
    c = commit -m       # Message commit.
    ca = commit -am     # Commit all + message.
    cam = commit -amend # Amend previous commit.

    # Checkout
    co = checkout
    nb = checkout -b    # Checkout + create new branch.

    # diff
    dlast = diff HEAD   # diff last commit change.

    # Status
    s = status
    st = status
    stat = status

    # Log
    graph = log --graph

[format]
    pretty = format:%C(blue)%ad%Creset %C(yellow)%h%C(green)%d%Creset %C(blue)%s %C(magenta) [%an]%Creset

[core]
    # Global ignore list.
    excludesfile = ~/.dotfiles/git/gitignore

    editor = vim

[push]
    default = matching
