# Makes sure we're on the latest version.
brew update
brew upgrade

# Core tools.
brew install zsh
brew install git
brew install coreutils

# Development & general tools.
brew install htop
brew install wget
brew install pstree
brew install tree
brew install gcal
brew install cloc
brew install ack

# Languages.
brew install python3
brew install python

# Frameworks.
brew install node

# Other programs.
brew install macvim
brew install graphviz

# Remove outdated versions from the cellar.
brew cleanup
brew linkapps

